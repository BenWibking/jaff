[
  {
    "label": "Ruff: Lint workspace",
    "command": "ruff",
    "args": ["check", "--exit-zero", "--output-format", "full", "$ZED_WORKTREE_ROOT"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
  },
    {
    "label": "Ruff: Format (current file)",
    "command": "ruff",
    "args": ["format", "${ZED_FILE:$ZED_WORKTREE_ROOT}"],
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
  },
  {
    "label": "Ruff: Format workspace",
    "command": "ruff",
    "args": ["format", "$ZED_WORKTREE_ROOT"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
  },
]
